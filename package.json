{
  "name": "mithra-energy-analyzer",
  "version": "1.0.0",
  "description": "eBay Energy Label Analysis Tool",
  "main": "backend/server.js",
  "type": "module",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "test": "jest",
    "frontend-dev": "live-server --port=8080 --open=index.html",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "audit": "npm audit && npm audit fix",
    "security-check": "npm audit --audit-level high",
    "docker:build": "docker build -t mithra-energy-analyzer .",
    "docker:run": "docker run -p 3000:3000 mithra-energy-analyzer",
    "docker:auto": "powershell.exe -ExecutionPolicy Bypass -File start-mithra-docker.ps1"
  },
  "keywords": [
    "ebay",
    "energy-label",
    "scraping",
    "analysis",
    "puppeteer"
  ],
  "author": "MITHRA Development Team",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "jsdom": "^25.0.1",
    "open": "^10.2.0",
    "puppeteer": "^23.6.0",
    "rate-limiter-flexible": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.0",
    "nodemon": "^3.1.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mithra/energy-analyzer.git"
  },
  "bugs": {
    "url": "https://github.com/mithra/energy-analyzer/issues"
  },
  "homepage": "https://github.com/mithra/energy-analyzer#readme",
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "globals": {
      "jest": {
        "useESM": true
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "browser": true,
      "es2022": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single"
      ]
    }
  }
}
